@{
    ViewData["Title"] = "Sign Up";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <style>
        body {
            margin: 0;
            height: 100vh;
            overflow: hidden; /* Prevent page scrolling */
        }

        .login-container {
            display: flex;
            max-width: 1200px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
            background-color: #fff;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .login-image {
            width: 50%;
            height: auto;
        }

            .login-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .login-form {
            width: 50%;
            padding: 40px;
            background-color: #fff;
        }

            .login-form h2 {
                margin-bottom: 20px;
            }

            .login-form input {
                width: 100%;
                padding: 10px;
                margin: 10px 0;
                border: 1px solid #ddd;
                border-radius: 4px;
            }

            .login-form button {
                width: 100%;
                padding: 10px;
                background-color: #007bff;
                border: none;
                color: #fff;
                border-radius: 4px;
                cursor: pointer;
            }

                .login-form button:hover {
                    background-color: #0056b3;
                }

            .login-form p {
                margin-top: 10px;
            }

            .login-form a {
                color: #007bff;
                text-decoration: none;
            }

                .login-form a:hover {
                    text-decoration: underline;
                }

        .box {
            display: inline-flex;
            align-items: center;
        }

            .box label {
                margin-right: 10px;
                white-space: nowrap; /* Keep label text on one line */
            }

        .swal2-container {
            z-index: 9999 !important; /* Display SweetAlert2 above other page elements */
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function validateForm(event) {
            event.preventDefault(); // Prevent default form submission
            var fullName = document.forms["signupForm"]["FullName"].value;
            var email = document.forms["signupForm"]["Email"].value;
            var password = document.forms["signupForm"]["Password"].value;
            var confirmPassword = document.forms["signupForm"]["ConfirmPassword"].value;

            // Function to display SweetAlert2 and prevent page scrolling
            function showAlert(icon, title, text) {
                Swal.fire({
                    icon: icon,
                    title: title,
                    text: text,
                    backdrop: `
                                        rgba(0,0,0,0.4)
                                        url("/images/nyan-cat.gif")
                                        left top
                                        no-repeat
                                    `,
                    didOpen: () => {
                        document.body.style.overflow = 'hidden';
                    },
                    willClose: () => {
                        document.body.style.overflow = '';
                    }
                });
            }

            if (fullName == "") {
                showAlert('error', 'Oops...', 'กรุณากรอกชื่อเต็ม');
                return false;
            }
            if (email == "") {
                showAlert('error', 'Oops...', 'กรุณากรอกอีเมล');
                return false;
            }
            if (password == "") {
                showAlert('error', 'Oops...', 'กรุณากรอกรหัสผ่าน');
                return false;
            }
            if (confirmPassword == "") {
                showAlert('error', 'Oops...', 'กรุณากรอกยืนยันรหัสผ่าน');
                return false;
            }
            if (password != confirmPassword) {
                showAlert('error', 'Oops...', 'รหัสผ่านและยืนยันรหัสผ่านไม่ตรงกัน');
                return false;
            }

            // If form is valid, submit the form
            event.target.submit();
        }
    </script>
</head>
<body>
    <div class="login-container">
        <div class="login-image">
            <img src="~/img/allpictures/poto_1.png" alt="Signup Image">
        </div>
        <div class="login-form">
            <h2>สมัครสมาชิก</h2>
            <form name="signupForm" method="post" action="/Account/SignUp">
                <input type="text" name="name" placeholder="ชื่อเต็ม" required>
                <input type="email" name="email" placeholder="อีเมล" required>
                <input type="password" name="password" placeholder="รหัสผ่าน" required>
                <input type="password" name="confirmPassword" placeholder="ยืนยันรหัสผ่าน" required>
                <button type="submit">สมัครสมาชิก</button>
            </form>
            <p>มีบัญชีอยู่แล้ว? <a href="/Account/SignIn">เข้าสู่ระบบ</a></p>
        </div>
    </div>
</body>
</html>
